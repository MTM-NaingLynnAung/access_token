<% if flash[:alert] %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
   <%= flash[:alert] %>
   <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
<%= form_with url: url, local: true, class: 'col-3' do |form| %>
  <div class="my-3">
    <%= form.label 'Ad Id' %>
    <%= form.text_field :ad_id, class: 'form-control', value: @audience.present? ? @audience.custom_audience_id : '' %>
  </div>
  <div class="mb-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control', value: @audience.present? ? @audience.name : '' %>
  </div>
  <div class="d-flex justify-content-between">
    <%= link_to 'Back', linkage_system_path(params[:id], definition: params[:definition]), class: 'btn btn-dark' %>
    <%= form.submit confirm, class: 'btn btn-primary' %>
  </div>
<% end %>
